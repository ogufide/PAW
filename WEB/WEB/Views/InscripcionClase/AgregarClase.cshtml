@model WEB.Entities.InscripcionClases

@{
    ViewData["Title"] = "Inscripción a Clase";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<section class="min-vh-100 mb-8">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('@Url.Content("~/plantilla/img/gym.jpeg")');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Inscripción a Clases</h1>
                    <p class="text-lead text-white">Llena el siguiente formulario para inscribirte a una clase.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="card-body">
                        @if (ViewBag.msj != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.msj
                            </div>
                        }
                        @using (Html.BeginForm("AgregarClase", "InscripcionClase", FormMethod.Post, new { id = "classForm" }))
                        {
                            <label for="clienteDropdown">Cliente</label>
                            <div class="mb-3">
                                @Html.DropDownListFor(m => m.Id_cliente, Model.NombreCliente, "Selecciona un cliente", new { @class = "form-control", @id = "clienteDropdown" })
                            </div>

                            <label for="claseDropdown">Clase</label>
                            <div class="mb-3">
                                @Html.DropDownListFor(m => m.IdClase, Model.NombreClase, "Selecciona una clase", new { @class = "form-control", @id = "claseDropdown" })
                            </div>

                            <div class="">
                                <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0" id="registerButton" >Inscribirse</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


