<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/plantilla/img/logo-fill.png">
    <link rel="icon" type="image/png" href="~/plantilla/img/logo-fill.png">
    <title>
        Harmony Gym
    </title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="~/plantilla/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/plantilla/css/nucleo-svg.css" rel="stylesheet" />
    <link href="~/plantilla/css/soft-ui-dashboard.css" rel="stylesheet" id="pagestyle" />
    <script src="https://api.nepcha.com/js/nepcha-analytics.js" defer data-site="YOUR_DOMAIN_HERE"></script>
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="">

    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg blur blur-rounded top-0 z-index-3 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                    <div class="container-fluid pe-0">
                        <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3 " href="../pages/dashboard.html">
                            Harmony Gym
                        </a>
                        <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon mt-2">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </span>
                        </button>
                        <div class="collapse navbar-collapse" id="navigation">
                            <ul class="navbar-nav mx-auto ms-xl-auto me-xl-7">
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center me-2 active" aria-current="page" href="../pages/dashboard.html">
                                        <i class="fa fa-chart-pie opacity-6 text-dark me-1"></i>
                                        Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link me-2" href="../pages/profile.html">
                                        <i class="fa fa-user opacity-6 text-dark me-1"></i>
                                        Perfil
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link me-2" href="@Url.Action("CreateUsuario", "Usuario")">
                                        <i class="fas fa-user-circle opacity-6 text-dark me-1"></i>
                                        Registrarse
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link me-2" href="@Url.Action("Login", "Home")">
                                        <i class="fas fa-key opacity-6 text-dark me-1"></i>
                                        Ingresar
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-4 mx-auto text-center">
                    <a href="@Url.Action("Index", "Home")" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">Inicio</a>
                    <a href="@Url.Action("Class", "Home")" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">Clases</a>
                    <a href="@Url.Action("Services", "Home")" class="text-secondary me-xl-5 me-3 mb-sm-0 mb-2">Servicios</a>

                </div>
            </div>
            <div class="row">
                <div class="col-8 mx-auto text-center mt-1">
                    <p class="mb-0 text-secondary">
                        Derechos Reservados © <script>
                                                  document.write(new Date().getFullYear())
                        </script> Software creado por Equipo 7, Programación Avanzada Web - Universidad Fidelitas
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/plantilla/js/core/popper.min.js"></script>
    <script src="~/plantilla/js/core/bootstrap.min.js"></script>
    <script src="~/plantilla/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="~/plantilla/js/soft-ui-dashboard.min.js?v=1.0.7"></script>
</body>

</html>